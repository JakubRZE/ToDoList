@model ajaxTest.Models.Task

@{
    ViewBag.Title = "Index";
}

<div class="container">

    <div class="row">
        <div class="col">
        </div>
        <div class="col-9  text-center">


            <h3>To Do List</h3>


        </div>
        <div class="col">
        </div>
    </div>

    <div class="row">
        <div class="col">
        </div>
        <div class="col-9" style="margin:25px;">


            <div class="row">
                <div class="col-8">
                    <input type="text" name="listName" id="listName" class="form-control col-12 d-inline" placeholder="Add new task list..." required="" />
                </div>
                <div class="col-4">
                    <button class="btn btn-info w-100" name="submitButton" id="btnSave" type="button">Add</button>
                </div>
            </div>

            @*@*success*@
            <div class="alert alert-success customAlert" id="success" style="display:none; margin:15px">
                Task added :) 
            </div>
            @*error*@
            <div class="alert alert-danger customAlert" id="error" style="display:none; margin:15px">
                Something goes wrong :< 
            </div>
            @Html.AntiForgeryToken()
        </div>
        <div class="col">
        </div>
    </div>

    <hr />

    <div class="row">
        <div class="col">
        </div>
        <div class="col-9" id="taskList">
            <div class="list-group" id="divTask">

                @*////////*@


                <p class="list-group-item customList" name="listedElement" id="pId">
                    Praca
                    <span class="float-right mt-2 lol customFontA" id="bin">
                        <i class="far fa-trash-alt d-inline"></i>
                    </span>
                </p>




                @*////////*@

            </div>
        </div>
        <div class="col">
        </div>
    </div>


</div>