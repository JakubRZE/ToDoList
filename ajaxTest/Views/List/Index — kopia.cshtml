@model ajaxTest.Models.Task

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Please enter the details below.</h3>
        </div>
        @Html.AntiForgeryToken()
        <div class="panel-body d-inline-flex p-2">
            <div class="form-group col-md-5">
                <label>Task Name</label>
                <input type="text" name="taskName" id="taskName" class="form-control" placeholder="Enter task name" required="" />
            </div> 

            <div class="form-group">
                <div class="pull-right" style="margin-right:5px">
                    <button class="btn btn-primary d-inline float-right" name="submitButton" id="btnSave" type="button" style="margin-top:25px">Add</button>
                    <button class="btn btn-primary d-inline float-right" id="btnLoad" style="margin-top:25px; display:none" disabled>
                        <i class="fa fa-spinner fa-spin"></i>Loading...
                    </button>
                </div>
                <div class="d-inline-flex p-2">
                    <div class="input-group">
                        <label>Description</label>
                        <input type="text" name="description" id="description" class="form-control" placeholder="Enter description" required="" />
                    </div>
                </div>
            </div>

        </div>
        @*success*@
        <div class="alert alert-success" id="success" style="display:none; margin:15px">
            <strong>Task added:) !</strong>
        </div>
        @*error*@
        <div class="alert alert-danger" id="error" style="display:none; margin:15px">
            <strong>Something goes wrong :< !</strong>
        </div>

    </div><hr />
    <table id="tblTask" class="table table-bordered table-striped table-responsive table-hover">
        <thead>
            <tr>
                <th align="left" class="productth">Task Name</th>
                <th align="left" class="productth">Description</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>
</div>
